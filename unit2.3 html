    }

    header {
      background: #4CAF50;
      color: white;
      text-align: center;
      padding: 1rem; /* flexible unit */
    }

    nav {
      display: flex;
      flex-direction: column; /* stack links on mobile */
      background: #333;
    }

    nav a {
      color: white;
      padding: 1em;
      text-decoration: none;
      text-align: center;
    }

    nav a:hover {
      background: #575757;
    }

    .container {
      display: flex;
      flex-direction: column;
      padding: 2vw; /* flexible unit based on viewport width */
    }

    .content, .sidebar {
      margin: 1rem 0;
      padding: 1rem;
      border: 1px solid #ccc;
      border-radius: 8px;
    }

    .content {
      background: #f9f9f9;
    }

    .sidebar {
      background: #e9e9e9;
    }

    footer {
      background: #4CAF50;
      color: white;
      text-align: center;
      padding: 1rem;
      margin-top: 2rem;
    }

    /* Tablet view (≥600px) */
    @media (min-width: 600px) {
      nav {
        flex-direction: row; /* horizontal menu */
        justify-content: space-around;
      }

      .container {
        flex-direction: row;
        gap: 2rem;
      }

      .content {
        flex: 3; /* wider content area */
      }

      .sidebar {
        flex: 1; /* narrower sidebar */
      }
    }

    /* Desktop view (≥1024px) */
    @media (min-width: 1024px) {
      body {
        font-size: 1.2rem; /* scale text up */
      }

      header, footer {
        padding: 2rem;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
      }
    }
  </style>
